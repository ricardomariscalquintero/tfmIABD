<configuration>
    <property>
        <name>yarn.resourcemanager.hostname</name>
        <value>resourcemanager</value>
    </property>
    <!-- Servicio auxiliar habilitado para el manejo de datos 
         intermedios entre tareas Map y Reduce -->
    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
    </property>
    <!-- Variables de entorno permitidas para los nodos del clúster -->
    <property>
        <name>yarn.nodemanager.env-whitelist</name>
        <value>JAVA_HOME,HADOOP_COMMON_HOME,HADOOP_HDFS_HOME,HADOOP_CONF_DIR,CLASSPATH_PREPEND_DISTCACHE,HADOOP_YARN_HOME,HADOOP_HOME,PATH,LANG,TZ,HADOOP_MAPRED_HOME</value>
    </property>
    <!-- Memoria total disponible para YARN en el NodeManager -->
    <property>
        <name>yarn.nodemanager.resource.memory-mb</name>
        <value>3000</value> <!-- 3 GB de memoria total -->
    </property>
    <!-- Asignación máxima de memoria que puede utilizar un solo contenedor -->
    <property>
        <name>yarn.scheduler.maximum-allocation-mb</name>
        <value>3000</value>
    </property>
    <!-- Asignación mínima de memoria para un contenedor -->
    <property>
        <name>yarn.scheduler.minimum-allocation-mb</name>
        <value>128</value>
    </property>
    <!-- Deshabilitar la verificación de memoria virtual para evitar 
         errores en entornos pequeños -->
    <property>
        <name>yarn.nodemanager.vmem-check-enabled</name>
        <value>false</value>
    </property>
</configuration>
